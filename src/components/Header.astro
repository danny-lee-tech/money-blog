---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="m-0 py-0 px-[1em] bg-header-bg shadow-header">
	<nav class="flex items-center justify-between">
		<h1 class="m-0 text-[1.2em] font-bold"><a class="px-[0.5em] py-[1em] text-[#F9F9F9] border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink class="px-[0.5em] py-[1em] text-header-menu border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="/">Home</HeaderLink>
			<HeaderLink class="px-[0.5em] py-[1em] text-header-menu border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="/blog">Blog</HeaderLink>
			<HeaderLink class="px-[0.5em] py-[1em] text-header-menu border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="/about">About</HeaderLink>
		</div>
		<div class="hidden md:flex">
			<a class="flex px-[0.5em] py-[1em] text-[#F9F9F9] border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="https://twitter.com/astrodotbuild" target="_blank">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"
					></path></svg
				>
			</a>
			<a class="flex px-[0.5em] py-[1em] text-[#F9F9F9] border-b-[4px] border-solid border-transparent no-underline active:no-underline" href="https://github.com/danny-lee-tech/money-blog" target="_blank">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16" astro-icon="social/github">
					<path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
